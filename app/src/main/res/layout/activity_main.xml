<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/productsRecycler"
      android:layout_width="0dp"
      android:layout_height="300dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <Button
      android:id="@+id/amount1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="16dp"
      android:text="1"
      app:layout_constraintEnd_toStartOf="@+id/amount5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/productsRecycler"
      />

  <Button
      android:id="@+id/amount5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:text="5"
      app:layout_constraintEnd_toStartOf="@+id/amount10"
      app:layout_constraintStart_toEndOf="@+id/amount1"
      app:layout_constraintTop_toBottomOf="@+id/productsRecycler"
      />

  <Button
      android:id="@+id/amount10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:text="10"
      app:layout_constraintEnd_toStartOf="@+id/amount25"
      app:layout_constraintStart_toEndOf="@+id/amount5"
      app:layout_constraintTop_toBottomOf="@+id/productsRecycler"
      />
  <Button
      android:id="@+id/amount25"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="8dp"
      android:text="25"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/amount10"
      app:layout_constraintTop_toBottomOf="@+id/productsRecycler"
      />

  <TextView
      android:id="@+id/total"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/amount5"
      tools:text="Total"
      />
  <TextView
      android:id="@+id/change"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/total"
      tools:text="Change"
      />

</androidx.constraintlayout.widget.ConstraintLayout>